# Test Environment Variables
# Copy this file to .env.test and configure with your test database credentials

NODE_ENV=test

# Test Database URL - Use a separate database for testing
DATABASE_URL="postgresql://user:password@localhost:5432/myapp_test"

# JWT Secrets for testing
JWT_SECRET="test-jwt-secret-change-in-production"
JWT_REFRESH_SECRET="test-refresh-secret-change-in-production"

# External Service Configuration (use test/mock credentials)
STRIPE_SECRET_KEY="sk_test_your_test_key"
STRIPE_WEBHOOK_SECRET="whsec_test_your_webhook_secret"

# Firebase Admin (use test project credentials)
FIREBASE_PROJECT_ID="your-test-project-id"
FIREBASE_PRIVATE_KEY="your-test-private-key"
FIREBASE_CLIENT_EMAIL="your-test-client-email"

# Cloudinary (use test account)
CLOUDINARY_CLOUD_NAME="test-cloud-name"
CLOUDINARY_API_KEY="test-api-key"
CLOUDINARY_API_SECRET="test-api-secret"

# Optional: Redis for testing (if using caching)
REDIS_URL="redis://localhost:6379/1"

# Email Service (use test credentials or mock)
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT="2525"
SMTP_USER="test-user"
SMTP_PASS="test-password"

# App Configuration
PORT=3001
BASE_URL="http://localhost:3001"

# Feature Flags for Testing
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=false
